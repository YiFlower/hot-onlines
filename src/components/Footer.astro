---
import { SITE_TITLE, SITE_EMAIL } from "../consts";
const { theme } = Astro.props;
import { SITE_NAME } from "../consts";
const date = new Date();
const year = date.getFullYear();
---

<div class:list={["footer-main", { "footer-dark": theme === "dark" }]}>
  <div class="content-body footer-wraper">
    <div class="footer-box">
      <div class="foot-nav">
        <div class="foot-nav-items">
          <div class="item">
            <div class="logo">{SITE_TITLE}</div>
            <div class="email">Email: {SITE_EMAIL}</div>
          </div>

          <div class="item products">
            <div class="item-title">推广</div>
            <a href="/" target="_blank">本站博客</a>
            <a href="https://dr.onlines.asia" target="_blank">性价比家装、工装、改造</a>
            <a href="https://dr.onlines.asia" target="_blank">👆真的很有性价比👆</a>
            <a href="/" target="_blank">👈广-告-位-招-租</a>
          </div>

          <div class="item community">
            <div class="item-title">社媒</div>
            <a href="https://www.toutiao.com" target="_blank">今日头条</a>
            <a href="https://news.163.com" target="_blank">网易新闻</a>
            <a href="https://news.qq.com" target="_blank">腾讯新闻</a>
          </div>
          
          <div class="item resources">
            <div class="item-title">友链</div>
            <a href="https://www.zhihu.com" target="_blank">知乎</a>
            <a href="https://baidu.com" target="_blank">百度一下</a>
          </div>

        </div>
      </div>
      <div class="bottom">
        <div class="copyright">
          &copy; {`${year} ${SITE_NAME}`} 
          <a href="/">Hot events in one hand</a>
        </div>
      </div>
    </div>
  </div>
</div>
